<%- include('partials/header.ejs') %>

<!-- Delete -->
<div class="content">
  <h1>Welcome to <strong class="strong">BlogIt Delete</strong></h1>
  <% if (locals.found === "true") { %>
   <p>Blog Deleted Successfully</p>
   <% } else if(locals.found === "false") { %>
    <p>BLogger Not Found!!!</p>
  <% } else { %>
        <p>You can Delete a blog Below.</p>
  <% } %>

  <form action="/delete" method="post">
    <input
      type="text"
      class="create"
      name="delete"
      placeholder="Enter blog title to Delete"
      required
    />
    <input type="submit" class="create blogSubmit delete" value="Delete Blog" />
  </form>
</div>

